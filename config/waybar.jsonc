// -*- mode: jsonc -*-
{
  "reload_style_on_change": true,
  "layer": "top",
  "position": "top",
  // "height": 30,
  "spacing": 0,
  "modules-left": [
    "clock#time"
  ],
  "modules-center": [
    "hyprland/submap",
    "hyprland/workspaces",
    "hyprland/window",
  ],
  "modules-right": [
    "backlight",
    "battery",
    "privacy",
    "idle_inhibitor",
    "pulseaudio",
    "bluetooth",
    "network",
  ],
  "cpu": {
    "format": " {usage}%",
    "tooltip": false,
  },
  "temperature": {
    "format": " {temperatureC}°C",
    "critical-threshold": 80,
    "tooltip": false,
  },
  "memory": {
    "format": " {used:0.1f}G/{total:0.1f}G ({percentage}%)",
    "tooltip": false,
  },
  "backlight": {
    "format": "{icon} {percent}%",
    "tooltip": false,
    "format-icons": ["", "", "", "", "", "", "", "", "", ""],
  },
  "battery": {
    "states": {
      "warning": 30,
      "critical": 15,
    },
    "format": "{icon} {capacity}%",
    "format-icons": ["", "", "", "", ""],
    "tooltip": false,
  },
  "systemd-failed-units": {
    "hide-on-ok": false,
    "format": "✗ {nr_failed}",
    "format-ok": "✓",
    "system": true,
    "user": true,
  },
  "privacy": {
    "icon-spacing": 4,
    "icon-size": 16,
    "transition-duration": 250,
    "modules": [
      {
        "type": "screenshare",
        "tooltip": true,
      },
      {
        "type": "audio-out",
        "tooltip": true,
      },
      {
        "type": "audio-in",
        "tooltip": true,
      },
    ],
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "",
      "deactivated": "",
    },
  },
  "hyprland/workspaces": {
    "show-special": true,
    "special-visible-only": true,
    "format": "{icon} {name}",
    "on-click": "activate",
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "on-scroll-down": "hyprctl dispatch workspace e-1",
    "tooltip": false,
    "format-icons": {
      "urgent": "",
      "special": "󰦤",
      "active": "",
      "default": "",
    },
  },
  "hyprland/submap": {
    "format": "󰌌 {}",
    "max-length": 8,
    "tooltip": false,
  },
  "hyprland/window": {
    "format": "",
    "icon": true,
    "icon-size": 16,
    "max-length": 60,
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-bluetooth": "{icon} {volume}%",
    "format-muted": "󰖁",
    "format-icons": {
      "headphone": "",
      "hands-free": "",
      "headset": "",
      "phone": "",
      "phone-muted": "",
      "portable": "",
      "default": ["", "", ""],
    },
    "scroll-step": 1,
    "on-click": "alacritty --class Dots.Menu -e wiremix",
  },
  "bluetooth": {
    "format": " {status}",
    "format-no-controller": " No controller",
    "format-on": " On",
    "format-off": " Off",
    "format-offline": " Offline",
    "format-disabled": " Disabled",
    "format-disconnected": " Disconnected",
    "format-connected": " {device_alias}",
    "format-connected-battery": " {device_alias} {device_battery_percentage}%",
    "tooltip": false,
    "on-click": "alacritty --class Dots.Menu -e bluetuith --no-warning",
  },
  "network": {
    "format-wifi": " {essid} ({signalStrength}%)",
    "format-ethernet": "🖧 {ifname}",
    "format-disconnected": "⚠ Disconnected",
    "on-click": "alacritty --class Dots.Menu -e nmtui",
    "tooltip": false,
  },
  "clock#time": {
    "format": "{:%d/%m/%Y  %H:%M}",
    "tooltip": false,
  },
}

