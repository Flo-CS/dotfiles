#!/usr/bin/env bash

if [[ -z ${DOTS_DIR+x} ]]; then
	export DOTS_DIR=$(gum input --placeholder "Enter the path of your dotfiles directory" --value "$HOME/.dotfiles")
fi

if [[ -z ${DOTS_ID+x} ]]; then
	export DOTS_ID=$(gum input --placeholder "Enter your dots ID used to identify specific local configurations (e.g. 'desktop', 'laptop')")
fi

export PATH="$DOTS_DIR/bin:$PATH"
