#!/usr/bin/env bash

source $MYARCHY_DIR/install/lib.sh

install_git() {
    install_packages git-filter-repo lazygit
}

install_docs() {
    install_packages man-pages tldr
}

install_files_sync() {
    install_packages rclone syncthing rsync
}

install_files_managers() {
    install_packages thunar yazi ranger nnn
}

install_terminal() {
    curl --proto '=https' --tlsv1.2 -sSf https://setup.atuin.sh | sh
    install_packages zoxide
}

install_qt() {
    install_packages kvantum kvantum-qt5
}

install_disks() {
    install_packages dust
}

install_git
install_docs
install_files_sync
install_files_managers
install_terminal
install_qt
install_disks
